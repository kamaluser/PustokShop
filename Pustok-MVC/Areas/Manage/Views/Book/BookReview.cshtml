@model Book
@{
    ViewData["Title"] = "BookReview";
    int order = 1;
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Review</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookReviews)
        {
            <tr>
                <th>@(++order)</th>
                <td>@item.Text</td>
                <td>
                    @if (item.Status == Pustok_MVC.Models.Enums.ReviewStatus.Accepted)
                    {
                        <a href="@Url.Action("RejectReview", "Book", new { reviewId = item.Id })" class="btn btn-danger">Reject</a>
                    }
                    else if (item.Status == Pustok_MVC.Models.Enums.ReviewStatus.Rejected)
                    {
                        <a href="@Url.Action("AcceptReview", "Book", new { reviewId = item.Id })" class="btn btn-warning">Accept</a>
                    }
                    else
                    {
                        <a href="@Url.Action("AcceptReview", "Book", new { reviewId = item.Id })" class="btn btn-warning">Accept</a>
                        <a href="@Url.Action("RejectReview", "Book", new { reviewId = item.Id })" class="btn btn-danger">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
